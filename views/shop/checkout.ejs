<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs', {path: path}) %>
            <main>
                <% if (products.length> 0) { %>
                    <ul class="cart__item-list">
                        <% products.forEach(p=> { %>
                            <li class="cart__item">
                                <h1>
                                    <%= p.productId.title %>
                                </h1>
                                <h2>Quantity: <%= p.quantity %>
                                </h2>
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= p.productId._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </li>
                            <% }) %>
                    </ul>
                    <hr>
                    <div class="centered">
                        <h2>Total Price: $<%=totalSum%>
                        </h2>
                    </div>
                    <div class="centered">
                        <button id="order-btn" class="btn">Order</button>
                        <script src="https://js.stripe.com/v3/"></script>
                        <script>
                            var stripe = Stripe('pk_test_51IActzLfLug25TuYho6VcQDR3ry8kITKYozuy8gCJYSnUEtYEXQfSQgbIDyNAHzixgJwD78nMinYJOk2HKN30Seo00atNitgdq');
                            var orderBtn = document.getElementById('order-btn');
                            orderBtn.addEventListener('click', ()=>{
                                stripe.redirectToCheckout({
                                    sessionId: '<%= sessionId %>'
                                });
                            });
                        </script>
                    </div>
                    <% } else { %>
                        <h1>No Products in Cart!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>