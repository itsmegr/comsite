<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(message) { %>
                    <div class="user-message <% if(isError) { %>user-message--error <% } else {%> user-message--success <% } %>">
                        <%= message %>
                    </div>
                    <% } %>
                <form class="product-form"
                    action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST" enctype="multipart/form-data">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title"
                            value="<% if (editing||isError) { %><%= product.title %><% } %>" required>
                    </div>
                    

                    <!-- <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl"
                            value="<% if (editing) { %><%= product.imageUrl %><% } %>">
                    </div> -->

                    <div class="form-control">
                        <label for="image">Image</label>
                        <input type="file" name="image" id="image">
                    </div>


                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01"
                            value="<% if (editing||isError) { %><%= product.price %><% } %>" required>
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" id="description"
                            rows="5" required><% if (editing||isError) { %><%= product.description %><% } %></textarea>
                    </div>

                    <input type="hidden" name="id" value="<% if (editing) { %><%= product._id %><% } %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="submit">
                        <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>